{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "outDir": "dist",
    "lib": [ "es6", "dom" ],
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true
  }
}